<div class="container">
  <div class="row">

    <div class="home-heading-container">
      <div class="headline-tags">
        <h1 class="main-heading">Hi, I'm <span class="hover-underline">Reem</span></h1>
        <br>
        <h2 class="sub-heading"> a fullstack developer.</h2>
        <br>
        <p class="action-p">Check out some of my work</p>
        <%= image_tag "arrow.png", class: "arrow-icon" %>
      </div>
    </div>

    <div class="d-flex justify-content-center align-items-center">
      <div class="container work-container">
          <div class="row justify-content-center">
            <div class="col-sm-12 col-md-10">
              <%= link_to "https://www.brunchtime.live/", target: "_blank" do %>
                <div class="work-card brunchtime">
                  <div class="work-desc">
                    <p>WEB APP</p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
           <div class="row justify-content-center">
            <div class="col-sm-12 col-md-10">
              <%= link_to "https://github.com/reemgawad/ruby2d-games/tree/master/01-snake", target: "_blank" do %>
                <div class="work-card ruby-games">
                  <div class="work-desc">
                    <p>GAMES</p>
                    <h3>Ruby2D Games</h3>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
           <div class="row justify-content-center">
            <div class="col-sm-12 col-md-10">
              <%= link_to "#" do %>
                <div class="work-card sajil">
                  <div class="work-desc">
                    <p>WEB APP</p>
                    <h3>Sajil - coming soon</h3>
                    <div style="margin-top: 60px">
                      <%= image_tag "coming-soon.png", style: "width: 80px" %>
                      <%= image_tag "bot.png", style: "width: 80px" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>

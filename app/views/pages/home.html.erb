<div class="container">

  <div class="home-heading-container">
    <div class="row">
      <div class="headline-tags col-12 col-md-6">
        <h1 class="main-heading">Hi, I'm <span class="hover-underline">Reem</span></h1>
        <br>
        <h2 class="sub-heading"> a fullstack developer.</h2>
        <br>
        <div>
          <p class="action-p">Check out some of my work</p>
          <%= image_tag "arrow.png", class: "arrow-icon" %>
        </div>
      </div>
      <div class="col-12 col-md-6 text-center">
        <%= image_tag "reem-pic.png", class: "avatar" %>
      </div>
    </div>
  </div>

  <!-- Portfolio section -->
  <!-- 2x2 col-6 col-6 then col-12 on md/sm -->

  <div class="d-flex justify-content-center align-items-center">
    <div class="container pb-5">
      <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
          <div class="work-card"> <!--Brunchtime-->
            <div class="work-img-div brunchtime"></div>
            <div class="work-desc">
              <ul class="skills">
                <li>Ruby on Rails</li>
                <li>Javascript</li>
                <li>PostgreSQL</li>
              </ul>
              <div class="work-desc-links">
                <a href="https://github.com/reemgawad/brunchtime"><i class="fab fa-github"></i></a>
                <a href="https://www.brunchtime.live"><i class="fas fa-external-link-alt"></i></a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-6">
          <div class="work-card"> <!--Snake-->
            <h3>Snake Game</h3>
            <div class="work-img-div ruby-games"></div>
            <div class="work-desc">
              <ul class="skills">
                <li>Ruby</li>
                <li>Ruby2D</li>
              </ul>
              <div class="work-desc-links">
                <a href="https://github.com/reemgawad/ruby2d-games/tree/master/01-snake"><i class="fab fa-github"></i></a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
          <div class="work-card"> <!--Arood-->
            <h3>Arood - coming soon</h3>
            <div class="work-img-div arood"></div>
            <div class="work-desc" style="position: absolute; top: 40px">
              <div style="margin-top: 60px;">
                <%= image_tag "coming-soon.png", style: "width: 80px" %>
                <%= image_tag "bot.png", style: "width: 80px" %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-6 d-none"> <!-- Remove d-none class when card is ready -->
          <div class="work-card">
            <h3> - coming soon</h3>
            <div class="work-img-div arood"></div>
            <div class="work-desc" style="position: absolute; top: 40px">
              <div style="margin-top: 60px;">
                <%= image_tag "coming-soon.png", style: "width: 80px" %>
                <%= image_tag "bot.png", style: "width: 80px" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Mini desc + skills section -->
  <!-- The 2 sub-sections will be col-6 col-6 / then col-12 on mobile-->
  <div class="about-container">
    <div class="row">
      <div class="col-12 col-lg-6"></div>
      <div class="col-12 col-lg-6"></div>
    </div>
  </div>

</div>
